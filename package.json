
{
  "name": "archetype-coaching-platform",
  "version": "1.0.0",
  "description": "A comprehensive coaching platform with archetype-based tools, payment integration, and video scheduling",
  "main": "index.html",
  "type": "module",
  "scripts": {
    "dev": "live-server --port=3000 --open=/",
    "build": "npm run minify-css && npm run minify-js",
    "minify-css": "cleancss -o dist/styles.min.css css/*.css",
    "minify-js": "terser js/*.js -o dist/scripts.min.js --compress --mangle",
    "test": "jest",
    "lint": "eslint js/**/*.js",
    "lint:fix": "eslint js/**/*.js --fix",
    "format": "prettier --write \"**/*.{js,html,css,json,md}\"",
    "validate": "html-validate **/*.html",
    "optimize-images": "imagemin assets/images/* --out-dir=dist/images",
    "deploy": "gh-pages -d .",
    "start": "npm run dev",
    "prebuild": "npm run lint && npm run validate",
    "postbuild": "npm run optimize-images",
    "watch": "concurrently \"npm run watch:css\" \"npm run watch:js\"",
    "watch:css": "nodemon --watch css --ext css --exec \"npm run minify-css\"",
    "watch:js": "nodemon --watch js --ext js --exec \"npm run minify-js\"",
    "serve": "http-server -p 8080 -c-1",
    "clean": "rimraf dist/*"
  },
  "keywords": [
    "coaching",
    "archetype",
    "personality",
    "tools",
    "productivity",
    "self-development",
    "payment-integration",
    "video-scheduling",
    "supabase",
    "lemon-squeezy"
  ],
  "author": {
    "name": "Chiz Saibanez",
    "email": "chizsaleei@gmail.com",
    "url": "https://chizsaleei.com"
  },
  "license": "MIT",
  "homepage": "https://chizsaleei.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/archetype-coaching-platform.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/archetype-coaching-platform/issues",
    "email": "chizsaleei@gmail.com"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "dependencies": {
    "@supabase/supabase-js": "^2.38.0",
    "@daily-co/daily-js": "^0.55.0"
  },
  "devDependencies": {
    "live-server": "^1.2.2",
    "clean-css-cli": "^5.6.2",
    "terser": "^5.24.0",
    "eslint": "^8.54.0",
    "prettier": "^3.1.0",
    "jest": "^29.7.0",
    "html-validate": "^8.7.0",
    "imagemin": "^8.0.1",
    "imagemin-mozjpeg": "^10.0.0",
    "imagemin-pngquant": "^9.0.2",
    "imagemin-svgo": "^10.0.1",
    "gh-pages": "^6.1.0",
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2",
    "http-server": "^14.1.1",
    "rimraf": "^5.0.5",
    "@babel/core": "^7.23.5",
    "@babel/preset-env": "^7.23.5",
    "babel-jest": "^29.7.0",
    "jsdom": "^23.0.1",
    "lighthouse": "^11.4.0",
    "axe-core": "^4.8.3"
  },
  "optionalDependencies": {
    "sharp": "^0.32.6",
    "workbox-cli": "^7.0.0"
  },
  "peerDependencies": {
    "typescript": "^5.3.0"
  },
  "config": {
    "port": 3000,
    "host": "localhost"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["/tests/setup.js"],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ],
    "collectCoverageFrom": [
      "js/**/*.js",
      "!js/**/*.min.js",
      "!**/node_modules/**"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true,
      "jest": true
    },
    "extends": ["eslint:recommended"],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
      "no-unused-vars": "warn",
      "no-console": "warn",
      "prefer-const": "error",
      "no-var": "error"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false
  },
  "funding": {
    "type": "kofi",
    "url": "https://ko-fi.com/lifebalanceq"
  }
}
        
